# ───── Window ─────
background_opacity 0.92
enable_blur yes
window_padding_width 10
dynamic_background_opacity 1
window_margin_width 10
hide_window_decorations yes
confirm_os_window_close 0


# ───── Font ─────
font_family Ubuntu Mono Nerd Font
bold_font Ubuntu Mono Nerd Font Bold
italic_font Ubuntu Mono Nerd Font Italic
font_size 12.0
force_ligatures no
bold_font auto

# ───── Cursor ─────
cursor_text_color #1e1e2e
cursor #dddddd

# ───── Selection ─────
selection_foreground #1e1e2e
selection_background #f5e0dc

# ───── Colors: Primary ─────
foreground #dddddd
background #000000

# ───── Colors: Normal ─────
color0  #100f0d
color1  #922727
color2  #cfa14a
color3  #ff9444
color4  #c2432f
color5  #b96b4d
color6  #dfbe9c
color7  #dbbf9e

# ───── Colors: Bright ─────
color8  #6a5656
color9  #e84545
color10 #ffc85a
color11 #ffb267
color12 #dd5a3f
color13 #c6845c
color14 #ffe0b3
color15 #dbbf9e

# ───── Bell (no animation in kitty) ─────
enable_audio_bell no
visual_bell_duration 0

cursor_trail 1

cursor_blink_interval 0
cursor_shape block
cursor_stop_blinking_after 0
adjust_line_height 0
adjust_column_width 0

glyph_offset_x 0
glyph_offset_y 0

letter_spacing 0
line_spacing 0

window_padding_width 20
window_padding_height 20



window_border_width 0
window_margin_width 0
